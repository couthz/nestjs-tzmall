    "scripts": {
        "cli": "bun run src/console/bin.ts",
        "n": "pnpm cli n",
        "build": "pnpm n build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "pnpm cli start",
        "start:dev": "pnpm cli start -w",
        "start:debug": "pnpm cli start -w -d",
        "start:prod": "cross-env NODE_ENV=production pnpm cli start -t",
        "start:jsprod": "cross-env NODE_ENV=production pnpm cli start",
        "start:pm2": "cross-env NODE_ENV=production pnpm cli start -s -t",
        "start:jspm2": "cross-env NODE_ENV=production pnpm cli start -s -w",
        "reload": "cross-env NODE_ENV=production pnpm cli reload",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@fastify/static": "^6.11.2",
        "@nestjs/common": "^10.2.6",
